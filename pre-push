#!/bin/bash

set -e

remote="$1"
url="$2"

z40=0000000000000000000000000000000000000000

while read local_ref local_sha remote_ref remote_sha
do
  if [[ "${local_sha}" = $z40 ]]; then
    echo "Deleting stuff, nothing to do"
  else
    set -x
    cargo clippy --all-targets -- --deny warnings
    cargo test
    XDG_DATA_HOME="$(pwd)/data/" cargo run --bin skyspell -- --lang en_US check --non-interactive
    cargo install --locked --path crates/cli/
    cargo install --locked --path crates/kak/
    (
      cd tests
      poetry install
      SKYSPELL_NON_INTERACTIVE_TESTS=1 poetry run pytest -n auto
    )
    (
      cd crates/core/
      cargo run --example simple-cli
    )

  fi
done

exit 0
